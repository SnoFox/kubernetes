{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "addLabels": [
    "automated"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/^apps/.*\\.ya?ml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/^values/.*\\.ya?ml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/^argo/.*\\.ya?ml$/"
    ]
  },
  "crossplane": {
    "managerFilePatterns": [
      "/^apps/crossplane/providers.yaml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Group updates by app directory and update type",
      "matchFileNames": [
        "apps/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "groupName": "{{parentDir}} {{updateType}} updates",
      "groupSlug": "{{parentDir}}-{{updateType}}"
    },
    {
      "description": "Group updates in values directory by update type",
      "matchFileNames": [
        "values/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "groupName": "values {{updateType}} updates",
      "groupSlug": "values-{{updateType}}"
    },
    {
      "description": "Auto-merge minor-level changes after burn-in",
      "matchUpdateTypes": [
        "minor"
      ],
      "groupName": "minor updates",
      "groupSlug": "minor",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "platformAutomerge": true,
      "minimumReleaseAge": "7 days",
      "automergeSchedule": "* 8-17 * * 1-5",
      "addLabels": [
        "auto-merge"
      ]
    },
    {
      "description": "Auto-merge patch-level changes",
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "patch updates",
      "groupSlug": "patch",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "platformAutomerge": true,
      "addLabels": [
        "auto-merge"
      ]
    },
    {
      "description": "Auto-merge digest updates for nginx-unprivileged",
      "matchPackageNames": [
        "**/nginx-unprivileged",
        "**/dgtlmoon/sockpuppetbrowser"
      ],
      "matchUpdateTypes": [
        "digest", "pinDigest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "squash",
      "platformAutomerge": true
    },
    {
      "description": "Auto-merge digest pins",
      "matchUpdateTypes": [
        "pinDigest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "squash",
      "platformAutomerge": true
    }

  ],
  "prCreation": "immediate"
}
